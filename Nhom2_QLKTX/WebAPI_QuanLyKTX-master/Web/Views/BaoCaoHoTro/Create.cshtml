@model Web.Models.BAOCAO_HOTRO

@{
    ViewBag.Title = "Tạo báo cáo - phiếu hỗ trợ";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h2>Tạo báo cáo - phiếu hỗ trợ</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.loai_bao_cao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.loai_bao_cao, (SelectList)ViewBag.LoaiBaoCao, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.loai_bao_cao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.noidung, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.noidung, new { @class = "form-control", rows = "10" })
                @Html.ValidationMessageFor(model => model.noidung, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo" class="btn btn-default" />
            </div>
        </div>
    </div>
}
